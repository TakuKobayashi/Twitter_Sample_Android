<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" >

	<Button
		android:id="@+id/TwitterOAuthButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
	/>

	<Button
		android:id="@+id/TwitterSendImageButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/TwitterOAuthButton"
		android:layout_centerHorizontal="true"
		android:text="SendImage"
	/>

	<WebView
		android:id="@+id/TwitterWebView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/TwitterSendImageButton"
		android:layout_centerHorizontal="true"
	/>

</RelativeLayout>
